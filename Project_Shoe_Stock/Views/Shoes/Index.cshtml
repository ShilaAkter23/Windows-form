@model IEnumerable<Project_Shoe_Stock.Models.Shoe>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-end mb-1">
            @Html.ActionLink("Create New", "Create", "Shoes", new { }, new { @class = "btn btn-primary btn-sm" })
        </div>
        <div id="table-div">
            @Html.Action("ShoeTable")
        </div>
    </div>

</div>
@section styles
{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}
@section scripts
{
    <script src="~/Scripts/jquery-3.7.1.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script>
        $(document).on("click", "button.show", function () {
            var showBtn = $(this);
            var hideBtn = showBtn.next();
            var trSh = showBtn.closest("tr");
            var trSt = trSh.next();
            showBtn.hide();
            hideBtn.show();
            trSt.show();
        });
        $(document).on("click", "button.hide", function () {
            var hideBtn = $(this);
            var showBtn = hideBtn.prev();
            var trSh = showBtn.closest("tr");
            var trSt = trSh.next();
            showBtn.show();
            hideBtn.hide();
            trSt.hide();
        });
    </script>
}

